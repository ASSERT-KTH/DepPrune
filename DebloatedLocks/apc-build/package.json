{
    "name": "apc-build",
    "version": "0.4.4",
    "description": "Gulp build scripts for front end APC projects",
    "main": "index.js",
    "scripts": {
        "test": "yarn lint && nyc mocha",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "lint": "eslint test/*.spec.js gulp-tasks/*.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/APCOvernight/apc-build.git"
    },
    "keywords": [
        "gulp",
        "build",
        "js",
        "frontend"
    ],
    "author": "Ian Egner <ian.egner@apc-overnight.com> (https://twitter.com/ianegner)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/APCOvernight/apc-build/issues"
    },
    "homepage": "https://github.com/APCOvernight/apc-build#readme",
    "engines": {
        "yarn": "^1.0.0"
    },
    "peerDependencies": {
        "apc-style": ">=0.4.3",
        "gulp": "^4.0.0"
    },
    "dependencies": {
        "@babel/core": "^7.13.15",
        "@babel/preset-env": "^7.13.15",
        "browserify": "16.2.0",
        "chai": "4.2.0",
        "css-mqpacker": "6.0.2",
        "fancy-log": "^1.3.2",
        "gulp-autoprefixer": "5.0.0",
        "gulp-babel": "8.0.0",
        "gulp-dart-sass": "^1.0.2",
        "gulp-eslint": "4.0.2",
        "gulp-if": "2.0.2",
        "gulp-imagemin": "5.0.3",
        "gulp-postcss": "7.0.1",
        "gulp-pug-linter": "1.0.0",
        "gulp-size": "3.0.0",
        "gulp-sourcemaps": "2.6.4",
        "gulp-uglify": "3.0.0",
        "mocha": "^8.3.2",
        "nyc": "^15.1.0",
        "plugin-error": "^1.0.1",
        "sinon": "7.2.4",
        "sinon-chai": "3.3.0",
        "vinyl-buffer": "1.0.1",
        "vinyl-source-stream": "2.0.0"
    },
    "devDependencies": {
        "apc-style": "1.2.0",
        "foundation-sites": "6.4.4-rc1",
        "fs-extra": "5.0.0",
        "gulp": "4.0.0"
    },
    "nyc": {
        "include": [
            "gulp-tasks/**/*.js",
            "index.js"
        ],
        "all": true,
        "watermarks": {
            "lines": [
                90,
                99
            ],
            "functions": [
                90,
                99
            ],
            "branches": [
                90,
                99
            ],
            "statements": [
                90,
                99
            ]
        },
        "reporter": [
            "clover",
            "text",
            "text-summary",
            "html",
            "cobertura",
            "lcov"
        ],
        "cache": true
    }
}